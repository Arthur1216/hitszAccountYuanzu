<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:orientation="vertical"
    android:background="#eee8cc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5E89DF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="设  置"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/setting_revert_btn"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_revert" />

    </LinearLayout>

    <Button
        android:id="@+id/mdf_psw_btn"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:text="修改文本密码"
        android:background="#00000000"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:text="开启手势密码"
            android:textColor="#000000"
            android:background="#00000000"
            android:gravity="center"/>

        <Switch
            android:id="@+id/swh_gesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_toEndOf="@+id/tv_1"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_marginLeft="80dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/reset_gesture_btn"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:text="重置手势密码"
        android:background="#00000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:text="开启指纹登录"
            android:textColor="#000000"
            android:background="#00000000"
            android:gravity="center"/>

        <Switch
            android:id="@+id/swh_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@+id/tv_2"
            android:layout_toRightOf="@+id/tv_2" />

    </RelativeLayout>

    <!--Button
    android:id="@+id/clear_data_btn"
    android:layout_width="233dp"
    android:layout_height="40dp"
    android:text="清除sharedpreferences数据"
    android:background="#00000000"/-->
</LinearLayout>